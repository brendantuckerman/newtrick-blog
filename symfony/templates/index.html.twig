{% extends 'base.html.twig' %} 
{% import 'blocks/postPreview.html.twig' as postPreview %}
{% block title %}
    NewTrick | Brendan Tuckerman
{% endblock %}

{% block body %}  
  <div class="index-page-content flex flex-col">
    <div class="title w-full flex flex-col items-start py-24">
      <h1 class="text-8xl leading-snug lg:text6xl font-semibold lg:leading-relaxed">That's a <span class="underline">New Trick.</span>
      <br>Blog of 🧑🏻‍💻 <br> Brendan Tuckerman
      </h1>
    </div>
    {# Posts/ Most recent Articles section #}
    {% if posts is not empty%}
    <div class="posts-summary border-t-4 border-black py-4">
      <h2 class="text-6xl text-end">Newest Tricks</h2>
      {% for post in posts %}
          {{ postPreview.renderPostPreview(post) }}
      {% endfor %}
    </div>
    <a href{{ path('posts') }} class="text-left uppercase font-semibold underline text-blue-600"> See all posts &gt;</a>
    {% endif %}
  </div>

{% endblock %}   