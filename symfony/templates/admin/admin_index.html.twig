{% extends "./base.html.twig" %}
{% block body %}

    <h1>Admin Dashboard</h1>

    {% if "ROLE_ADMIN" in app.user.roles %}
      
    <div class="card-container overflow-hidden shadow-xl bg-gray-200 relative hover:shadow-2xl hover:scale-105 duration-700 rounded">
      <div class="card-trip-infos flex p-5 justify-center relative items-center">
        <div>
          <h2 class="text-5xl font-semibold mb-4">Manage Posts</h2>
          <p>Create, edit, and delete posts</p>
          <a href="/admin/posts/" class='card-link absolute top-0 bottom-0 left-0 w-full'></a>
        </div>
      </div>
    </div>

     <div class="card-container overflow-hidden shadow-xl bg-gray-200 relative hover:shadow-2xl hover:scale-105 duration-700 rounded">
      <div class="card-trip-infos flex p-5 justify-center relative items-center">
        <div>
          <h2 class="text-5xl font-semibold mb-4">Manage Users</h2>
          <p>Create, edit, and delete users</p>
          <a href="/admin/users" class='card-link absolute top-0 bottom-0 left-0 w-full'></a>
        </div>
      </div>
    </div>

    {% else %}

    <p>You are not authorised to view this page.</p>
    <a href="/">Return Home</a>

    {% endif %}

{% endblock %}