<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <script src="https://cdn.tailwindcss.com"></script>
        <script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.3.5/dist/alpine.min.js" defer></script>
        {{ encore_entry_link_tags('app') }}
        {{ encore_entry_script_tags('app') }}
    </head>
    <body class="bg-gray-100 min-h-screen antialiased leading-none font-sans flex flex-col">
            {% block header %}
                <header>
                    <nav
                            class="text-black flex items-center justify-between flex-wrap p-6 fixed w-full z-10 top-0"
                            x-data="{ isOpen: false }"
                            @keydown.escape="isOpen = false"
                          > 

                        <div class="flex items-center flex-shrink-0 text-black mr-6">
                            <a
                                    class="text-black no-underline hover:text-white hover:no-underline"
                                    href="/">
            <span class="text-2xl pl-2 font-extrabold">
                NewTrick
            </span>
                            </a>
                        </div>

                        <button
                                @click="isOpen = !isOpen"
                                type="button"
                                class="block lg:hidden px-2 text-black hover:text-white focus:outline-none focus:text-white"
                                :class="{ 'transition transform-180': isOpen }">

                            <svg
                                    class="h-6 w-6 fill-current"
                                    xmlns="http://www.w3.org/2000/svg"
                                    viewBox="0 0 24 24">

                                <path
                                        x-show="isOpen"
                                        fill-rule="evenodd"
                                        clip-rule="evenodd"
                                        d="M18.278 16.864a1 1 0 0 1-1.414 1.414l-4.829-4.828-4.828 4.828a1 1 0 0 1-1.414-1.414l4.828-4.829-4.828-4.828a1 1 0 0 1 1.414-1.414l4.829 4.828 4.828-4.828a1 1 0 1 1 1.414 1.414l-4.828 4.829 4.828 4.828z"
                                />

                                <path
                                        x-show="!isOpen"
                                        fill-rule="evenodd"
                                        d="M4 5h16a1 1 0 0 1 0 2H4a1 1 0 1 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2z"
                                />
                            </svg>
                        </button>

                        <div
                                class="w-full flex-grow lg:flex lg:items-center lg:w-auto"
                                :class="{ 'block shadow-3xl': isOpen, 'hidden': !isOpen }"
                                @click.away="isOpen = false"
                                x-show.transition="true">

                            <ul class="pt-6 lg:pt-0 list-reset lg:flex justify-end flex-1 items-center">
                                <li class="mr-3">
                                    <a
                                            class="inline-block text-gray-700 no-underline hover:text-blue-600 hover:text-underline py-2 px-4"
                                            href="/"
                                            @click="isOpen = false">
                                        Home
                                    </a>
                                </li>

                                <li class="mr-3">
                                    <a
                                            class="inline-block text-gray-700 no-underline hover:text-blue-600 hover:text-underline py-2 px-4"
                                            href="/teachers"
                                            @click="isOpen = false"
                                    >That's a new trick
                                    </a>
                                </li>

                                <li class="mr-3">
                                    <a
                                            class="inline-block text-gray-700 no-underline hover:text-blue-600 hover:text-underline py-2 px-4"
                                            href="/contact"
                                            @click="isOpen = false">
                                        Contact
                                    </a>
                                </li>
                             {% if app.user %}

                              <li class="mr-3">
                                    <a
                                        class="inline-block text-gray-700 no-underline hover:text-blue-600 hover:text-underline py-2 px-4"
                                        href={{ app.user  ? '/logout' : '/login' }}
                                        @click="isOpen = false">
                                        {{ app.user  ? 'Logout' : 'Login' }}
                                    </a>
                                </li>  



                             {% else %}
                                <li class="mr-3">
                                    <a
                                        class="inline-block text-gray-700 no-underline hover:text-blue-500 hover:text-underline py-2 px-4"
                                        href="/login"
                                        @click="isOpen = false">
                                        Login
                                    </a>
                                </li>   

                            {%  endif %}  

                             <li class="mr-3">
                                    <a
                                        class="inline-block text-gray-700 no-underline hover:text-blue-500 hover:text-underline py-2 px-4"
                                        href="/login"
                                        @click="isOpen = false">
                                        Search
                                    </a>
                                </li>                              
                            </ul>
                        </div>
                    </nav>
                </header>
            {% endblock %}

            <div class="wrapper flex flex-col grow">
            {% block body %}
            
            {% endblock %}
            </div>

            {% block footer %}
                <footer class="bg-blue-700 py-6 mt-40 w-full h-20 flex flex-col">
                    <p class="w-25 w-4/5 text-center pb-3 m-auto text-base text-gray-100 pt-6">
                        Copyright {{ 'now' | date('Y') }} Brendan Tuckerman. All Rights Reserved
                    </p>
                </footer>
            {% endblock %}
    </body>
</html>